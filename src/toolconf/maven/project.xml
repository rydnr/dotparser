        http://sourceforge.net/mailinglists/dotparser-cvs@dev.acm-sl.org
      </archive>
    </mailingList>
  </mailingLists>

  <developers>

    <developer>
      <name>Jose San Leandro</name>
      <id>chous</id>
      <email>chous@acm-sl.org</email>
      <organization>ACM-SL</organization>
    </developer>
  </developers>

  <dependencies>

    <dependency>
      <groupId>acmsl-commons</groupId>
      <artifactId>acmsl-commons</artifactId>
      <version>0.5.7b8</version>
      <url>http://www.acm-sl.org/commons</url>
      <properties>
        <required.to.compile>true</required.to.compile>
        <required.to.run>true</required.to.run>
        <required.to.test>true</required.to.test>
        <required.to.build>true</required.to.build>
      </properties>
    </dependency>

    <dependency>
      <groupId>antlr</groupId>
      <artifactId>antlr</artifactId>
      <version>2.7.5</version>
      <url>http://www.antlr.org</url>
      <properties>
        <required.to.compile>true</required.to.compile>
        <required.to.run>true</required.to.run>
        <required.to.test>true</required.to.test>
        <required.to.build>true</required.to.build>
      </properties>
    </dependency>

    <dependency>
      <groupId>antmake</groupId>
      <artifactId>antmake</artifactId>
      <version>0.1.9b1</version>
      <url>http://www.acm-sl.org/antmake</url>
      <properties>
        <required.to.compile>false</required.to.compile>
        <required.to.run>false</required.to.run>
        <required.to.test>false</required.to.test>
        <required.to.build>true</required.to.build>
      </properties>
    </dependency>

    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.3</version>
      <url>http://jakarta.apache.org/commons/</url>
      <properties>
        <required.to.compile>true</required.to.compile>
        <required.to.run>true</required.to.run>
        <required.to.test>true</required.to.test>
        <required.to.build>true</required.to.build>
      </properties>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <url>http://www.junit.org</url>
      <properties>
        <required.to.compile>false</required.to.compile>
        <required.to.run>false</required.to.run>
        <required.to.test>true</required.to.test>
        <required.to.build>false</required.to.build>
      </properties>
    </dependency>

    <dependency>
      <groupId>commons-beanutils</groupId>
      <artifactId>commons-beanutils</artifactId>
      <version>1.7.0</version>
      <url>http://jakarta.apache.org/commons/</url>
      <properties>
        <required.to.compile>false</required.to.compile>
        <required.to.run>true</required.to.run>
        <required.to.test>false</required.to.test>
        <required.to.build>false</required.to.build>
        <injected.by>commons-digester</injected.by>
        <injected.by>acmsl-commons</injected.by>
      </properties>
    </dependency>

    <dependency>
      <groupId>oro</groupId>
      <artifactId>oro</artifactId>
      <version>2.0.8</version>
      <url>http://jakarta.apache.org/oro</url>
      <properties>
        <required.to.compile>false</required.to.compile>
        <required.to.run>true</required.to.run>
        <required.to.test>true</required.to.test>
        <required.to.build>true</required.to.build>
        <injected.by>acmsl-commons/commons</injected.by>
      </properties>
    </dependency>

  </dependencies>

  <build>

    <nagEmailAddress>
      chous@acm-sl.org
    </nagEmailAddress>

    <sourceDirectory>../../java/main</sourceDirectory>

    <unitTestSourceDirectory>../../java/test</unitTestSourceDirectory>
    <integrationUnitTestSourceDirectory/>

    <aspectSourceDirectory/>

    <!-- Unit test cases -->
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <excludes>
        <exclude>**/RepositoryTest.java</exclude>
      </excludes>
    </unitTest>
              
    <!-- J A R  R E S O U R C E S -->
    <!-- Resources that are packaged up inside the JAR file -->
    <resources>
      <includes>
        <include>*.xsd</include>
        <include>log4j.properties</include>
      </includes>
    </resources>

    <!-- Integration unit test cases -->
    <integrationUnitTest/>

    <jars/>

  </build>

  <reports>
    <report>maven-changelog-plugin</report>
    <report>maven-changes-plugin</report>
    <!-- We're getting out-of-memory
    <report>maven-checkstyle-plugin</report>
    -->
    <!--
      PMD makes the site generation crash if no errors are
      found. It's better to do it manually.
    <report>maven-pmd-plugin</report>
    -->
    <report>maven-developer-activity-plugin</report>
    <report>maven-file-activity-plugin</report>
    <report>maven-javadoc-plugin</report>
    <report>maven-jdepend-plugin</report>
    <report>maven-junit-report-plugin</report>
    <report>maven-jxr-plugin</report>
    <report>maven-license-plugin</report>
    <!-- We're getting out-of-memory
    <report>maven-linkcheck-plugin</report>
    -->
    <report>maven-tasklist-plugin</report>
    <!--
      JellyDoc makes the site generation crash if no errors are
      found. It's better to do it manually.
    <report>maven-jellydoc-plugin</report>
    -->
  </reports>
</project>
