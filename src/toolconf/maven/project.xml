    <mailingList>
      <name>DotParser Developer List</name>
      <subscribe>
        dotparser-cvs-subscribe@dev.acm-sl.org
      </subscribe>
      <unsubscribe>
        dotparser-cvs-unsubscribe@dev.acm-sl.org
      </unsubscribe>
