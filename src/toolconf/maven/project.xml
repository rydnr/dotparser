<project>
  <pomVersion>3</pomVersion>
  <name>QueryJ</name>
  <id>queryj</id>
  <groupId>org.acmsl.dotparser</groupId>
  <currentVersion>0.3-SNAPSHOT</currentVersion>
  <organization>
    <name>ACM S.L.</name>
    <url>http://www.acm-sl.org/</url>
    <logo>http://www.acm-sl.org/images/logo.png</logo>
  </organization>
  <inceptionYear>2006</inceptionYear>
  <package>org.acmsl.dotparser</package>

  <shortDescription>
    Parser for dot (Graphviz) grammar.
  </shortDescription>

  <description>
    Simple ANTLR-based grammar to build an object model with Graphviz graphs.
  </description>

  <url>http://maven.acm-sl.org/dotparser/</url>
  <logo>http://www.acm-sl.org/images/dotparser.png</logo>
  <issueTrackingUrl>http://bugzilla.acm-sl.org</issueTrackingUrl>
  <siteAddress>bugzilla.acm-sl.org</siteAddress>
  <siteDirectory>
    /home/anoncvs/dotparser
  </siteDirectory>
  <distributionDirectory>
    /home/anoncvs/builds/dotparser/
  </distributionDirectory>

  <repository>
    <connection>
      scm:cvs:pserver:anoncvs@cvs.acm-sl.org:/var/cvs:dotparser
    </connection>
    <url>
      http://cvs.acm-sl.org/viewcvs/viewcvs.cgi/dotparser
    </url>
  </repository>

  <versions>
    <version>
      <id>0.1</id>
      <name>0.1</name>
      <tag>HEAD</tag>
    </version>
  </versions>

  <mailingLists>
    <mailingList>
      <name>DotParser User List</name>
      <subscribe>
        dotparser-users-subscribe@dev.acm-sl.org
      </subscribe>
